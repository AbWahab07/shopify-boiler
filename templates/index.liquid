<div class="section">
  <div class="width-restrict pad">

    <h2>Buttons, Inputs, etc</h2>

    <a class="btn">Here's a button</a>
    <input class="btn" type="submit" value="test submit here">

    <textarea>Hey it's a textarea!</textarea>
    <input type="text" placeholder="Text Field Bruh!" />
    <input type="email" placeholder="Email@Bruh.com" />
    <input type="password" placeholder="Pass Pass" />
    <input type="number" placeholder="123" />

  </div>
</div>

<div class="section">
  <div class="width-restrict pad">

    <h2>Home Page RTE Content</h2>

    <!-- Home Page content (including home page collection) -->
    {% unless settings.homepage_page == blank or pages[settings.homepage_page].empty? %}
      {% assign page = pages[settings.homepage_page] %}
      <div class="rte page-content">
        {{ page.content }}
      </div>
    {% endunless %}

  </div>
</div>

<div class="section">
  <div class="width-restrict pad">

    <h2>Home Page Collection</h2>

    {% unless settings.homepage_collection == blank or collections[settings.homepage_collection].empty? %}
      {% assign collection = collections[settings.homepage_collection] %}
      <div class="grid grid-4">
        {% for product in collection.products %}
          {% include 'product-grid-item' %}
        {% else %}
          <div class="no-products">You have no products in your {{ collections[settings.homepage_collection].title }} collection. <a href="http://www.shopify.com/admin/collections">Add some.</a>
          </div>
        {% endfor %}
      </div>
    {% endunless %}

  </div>
</div>
